#!/usr/bin/env node
require('./alto-new')

/**
  Module dependencies.
*/

var program = require('alto-cli')
  , clc = require('cli-color')
  , pkg = require('../package.json')
  , version = pkg.version;

  program
    .command('*')
    .action(function(){
      console.log(clc.xterm(9)('Invalid command.  Use alto --help for directions'));
    });

  program
     .version(version)

  program.parse(process.argv);

